<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/resultbar_layout"
             android:id="@+id/include"></include>

    <LinearLayout
        android:id="@+id/bh_line"
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray_yellow"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号："
            android:textSize="14sp"
            android:textColor="@color/shit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10077656"
            android:textSize="14sp"
            android:textColor="@color/shit"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bh_line"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center_horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/head_img"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:src="@drawable/circle"
                android:layout_marginRight="35dp"/>
            <ImageView
                android:id="@+id/res_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/red_cl_icon"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#D7D7D7"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="背景信息"
            android:textSize="12sp"/>
        <cn.carbs.android.expandabletextview.library.ExpandableTextView
            android:id="@+id/cl_xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="@string/poem_0"
            android:textColor="#f25c44"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#D7D7D7"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="车牌号码"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/clhcjg_cphm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="浙A88888"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="车辆品牌"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/clhcjg_clpp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="迈巴赫牌"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="车辆颜色"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/clhcjg_clys"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="黑色"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="联系电话"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/clhcjg_lxdh"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="111111"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="车主姓名"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/clhcjg_czxm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="喝茶人"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="身份证号"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/clhcjg_sfzh"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="330000199111110031"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#D7D7D7"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle"/>
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/red_icon"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>