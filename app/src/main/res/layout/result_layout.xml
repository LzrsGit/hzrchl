<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/resultbar_layout"
             android:id="@+id/include"></include>

    <LinearLayout
        android:id="@+id/line_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center_horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/head_img"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:src="@drawable/circle"
                android:layout_marginRight="35dp"/>
            <ImageView
                android:id="@+id/res_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/red_icon"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#D7D7D7"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="背景信息"
            android:textSize="12sp"/>
        <cn.carbs.android.expandabletextview.library.ExpandableTextView
            android:id="@+id/etv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="@string/poem_0"
            android:textColor="#f25c44"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#D7D7D7"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="姓名号码"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/hcjg_xm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="喝茶人"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="性别"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/hcjg_xb"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="男"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="证件号码"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/hcjg_sfzh"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="333333199911110011"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="民族"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/hcjg_mz"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="汉"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="出生日期"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/hcjg_csrq"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="1999年11月11日"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="户籍地址"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/hcjg_hjdz"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="户籍地址户籍地址户籍地址"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:drawableTop="@drawable/common_dialog_selection_selector_bottom"
            android:background="#1FA0FE"
            android:textColor="#ffffff"
            android:text="拍照"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:drawableTop="@drawable/common_dialog_selection_selector_center"
            android:background="#1FA0FE"
            android:textColor="#ffffff"
            android:text="随行人员检查"/>
    </LinearLayout>

</RelativeLayout>